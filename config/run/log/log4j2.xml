<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="default_filename">log/run/log4j2.log</Property>
        <Property name="timing_filename">log/run/timing.log</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="LogFile" fileName="${default_filename}" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="Timing" fileName="${timing_filename}" append="false">
            <PatternLayout pattern="%msg,%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="Console" />
            <AppenderRef ref="LogFile"/>
        </Root>
        <logger level="trace" name="Timing">
            <appender-ref ref="Timing"/>
        </logger>
    </Loggers>
</Configuration>